<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/habilidades_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="@color/design_default_color_primary_dark"
            android:text="@string/cazar" />

        <Button
            android:id="@+id/suma_habilidad"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_weight="1"
            android:background="@drawable/mas" />

        <TextView
            android:id="@+id/contador_habilidad_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/design_default_color_primary_dark"
            android:text="@string/_0"
            android:textAlignment="center" />

        <Button
            android:id="@+id/resta_habilidad"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_weight="1"
            android:background="@drawable/resta" />

    </LinearLayout>



</LinearLayout>